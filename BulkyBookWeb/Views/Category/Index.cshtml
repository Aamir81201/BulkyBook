@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row py-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create"><i class="bi bi-plus-circle"></i> &nbsp Create New Category</a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped" width=100%>
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Orders
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td width=50%>
                        @i.Name
                    </td>
                    <td width=30%>
                        @i.DisplayOrders
                    </td>
                    <td >
                        <div class="btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-controller="Category" asp-action="Edit" asp-route-id=@i.Id><i class="bi bi-pencil-square"></i> Edit</a>
                            <a class="btn btn-danger mx-2" asp-controller="Category" asp-action="Delete" asp-route-id=@i.Id><i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
