@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row py-4">
        <div class="col-6">
            <h2 class="text-primary">Categories</h2>
        </div>
        <div class="col-6 text-end">
            <button class="btn btn-primary" asp-controller="Category" asp-action="Create"><i class="fa-regular fa-circle-plus"></i> &nbsp Add New Category</button>
        </div>
    </div>

    <table class="table table-bordered table-striped" width=100%>
        <thead>
            <tr>
                <th width=50%>
                    Category Name
                </th>
                <th width=30%>
                    Display Orders 
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td>
                        @i.Name
                    </td>
                    <td>
                        @i.DisplayOrders
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
